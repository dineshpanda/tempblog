<!-- Validation failure messages -->
<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit article #<%= @article.id %>
</h1>

<hr>

<!-- Form article start -->
<form action="/update_article/<%= @article.id %>" method="post">
<!-- Form article end -->

  <!-- Label and input for title start -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <!-- Input for title start -->
    <input type="text" id="title" name="title" class="form-control" value="<%= @article.title %>">
    <!-- Input for title end -->
  </div>
  <!-- Label and input for title end -->

  <!-- Label and input for content start -->
  <div class="form-group">
    <label for="content">
      Content
    </label>

    <!-- Input for content start -->
    <textarea id="content" name="content" class="form-control" rows="3"><%= @article.content %></textarea>
    <!-- Input for content end -->
  </div>
  <!-- Label and input for content end -->

  <button class="btn btn-block btn-outline-secondary">
    Update article
  </button>
</form>

<hr>

<a href="/articles">
  Go back
</a>
